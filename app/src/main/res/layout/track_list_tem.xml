<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginEnd="@dimen/margin_10"
    android:background="@color/white"
    android:id="@+id/custTrackCD"
    android:orientation="vertical">
    <View
        android:layout_width="8dp"
        android:layout_height="160dp"
        android:background="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_10"
                android:id="@+id/tableLinear"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Table No."/>

                <TextView
                    android:layout_width="@dimen/width_80"
                    android:layout_height="@dimen/height_60"
                    android:id="@+id/tableNo"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:text="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tableLinear"
                android:id="@+id/branchLinear"
                android:layout_marginTop="@dimen/margin_35"
                android:layout_marginStart="@dimen/margin_10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Branch Name "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trackBranch"
                    android:layout_marginStart="@dimen/margin_5"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Wardhman"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/branchLinear"
                android:id="@+id/branchLinear1"
                android:layout_marginTop="@dimen/margin_35"
                android:layout_marginStart="@dimen/margin_40"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Start Time "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trackTime"
                    android:layout_marginStart="@dimen/margin_5"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:text="Wardhman"/>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearProgress"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:weightSum="4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="Washing"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="Dry and Cleaning"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="Hair Styling"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="Complete"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_30"

            android:layout_marginBottom="@dimen/margin_15"
            android:orientation="horizontal">
            <View
                android:id="@+id/view_state1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_circle_24" />

            <View
                android:layout_width="@dimen/width_70"
                android:layout_height="@dimen/height_5"
                android:layout_marginTop="@dimen/margin_10"
                android:id="@+id/line1"
                android:layout_marginLeft="-5dp"
                android:background="@color/light_gray"/>

            <View
                android:id="@+id/view_state2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="-5dp"
                android:background="@drawable/baseline_circle_24" />

            <View
                android:layout_width="@dimen/width_70"
                android:layout_height="@dimen/height_5"
                android:layout_marginTop="@dimen/margin_10"
                android:id="@+id/line2"
                android:layout_marginLeft="-5dp"
                android:background="@color/light_gray"/>

            <View
                android:id="@+id/view_state3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="-5dp"
                android:background="@drawable/baseline_circle_24" />

            <View
                android:layout_width="@dimen/width_60"
                android:layout_height="@dimen/height_5"
                android:layout_marginTop="@dimen/margin_10"
                android:id="@+id/line3"
                android:layout_marginLeft="-5dp"
                android:background="@color/light_gray"/>

            <View
                android:id="@+id/view_state4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="-5dp"
                android:background="@drawable/baseline_circle_24" />

        </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/startTbBtn"
            android:layout_width="@dimen/width_150"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/margin_25"
            android:layout_marginBottom="@dimen/margin_5"
            android:background="@drawable/button_background"
            android:text="Start"
            android:textColor="@color/white" />

    </LinearLayout>





</androidx.cardview.widget.CardView>
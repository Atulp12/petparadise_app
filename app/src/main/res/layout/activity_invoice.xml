<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InvoiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_70"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="@dimen/margin_15"
            android:src="@drawable/baseline_arrow_circle_left_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:fontFamily="serif"
            android:textSize="19sp"
            android:text="INVOICE"/>

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_15"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="LITTLE PET'S PARADISE"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_8"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:text="Shri Guru Krupa Appt Chowk, Central Ave, Nagpur"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_8"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:text="+91 90211 92849,  +91 90211 92849"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Date : "
                android:layout_marginTop="@dimen/margin_8"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:id="@+id/dateIN"
                android:text="Customer 1"
                android:layout_marginTop="@dimen/margin_8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Invoice No.: "
                android:layout_marginTop="@dimen/margin_8"
                />


            <EditText
                android:layout_width="@dimen/width_120"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_15"
                android:layout_weight="1"
                android:padding="@dimen/padding_10"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:background="@drawable/border"
                android:id="@+id/invoiceNo"
                android:editable="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Amount(Rs):"
                android:layout_marginTop="@dimen/margin_8"
                />


            <EditText
                android:layout_width="@dimen/width_120"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_15"
                android:layout_weight="1"
                android:padding="@dimen/padding_10"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:id="@+id/amountIN"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Customer Name : "
                android:layout_marginTop="@dimen/margin_8"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:id="@+id/custNmIN"
                android:text="Customer 1"
                android:layout_marginTop="@dimen/margin_8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:text="Mobile No. : "
                android:layout_marginTop="@dimen/margin_8"
                android:textStyle="bold"
                android:id="@+id/custNameHold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:id="@+id/mobileIN"
                android:text="Customer 1"
                android:layout_marginTop="@dimen/margin_8"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_10"
            android:text="Grooming Details"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:weightSum="5"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_20"
            android:gravity="center"
            android:background="@color/light_gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/margin_10"
                android:text="Sr.No."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Service"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Date"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Total"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"

                android:layout_marginEnd="@dimen/margin_30"
                android:id="@+id/srNo"
                android:layout_marginStart="@dimen/margin_10"
                android:text="Sr.No."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginEnd="@dimen/margin_20"
                android:id="@+id/serviceTxt"
                android:text="Service"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/margin_10"
                android:textSize="12sp"
                android:id="@+id/dateTxtIN"
                android:text="Date"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="12sp"
                android:id="@+id/timeIN"
                android:text="Time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12sp"
                android:id="@+id/totalIN"
                android:text="Total"/>
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/width_200"
            android:layout_height="@dimen/height_55"
            android:text="Generate Invoice"
            android:layout_marginStart="@dimen/margin_15"
            android:background="@drawable/button_background"
            android:drawableStart="@drawable/baseline_checklist_24"
            android:paddingStart="@dimen/padding_10"
            android:typeface="serif"
            android:layout_marginTop="@dimen/margin_10"
            android:textColor="@color/white"
            android:drawableTint="@color/white"
            android:id="@+id/generateBtn"/>

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="@dimen/width_115"
            android:layout_height="@dimen/height_55"
            android:text="Cancel"
            android:typeface="serif"
            android:background="@drawable/button_background"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>